  },
  "dependencies": {
    "@repo/logger": "*",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "date-fns": "^3.6.0",
    "helmet": "^7.1.0",
    "winston": "^3.13.0",
    "zod": "^3.23.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "env-cmd": "^10.1.0"
